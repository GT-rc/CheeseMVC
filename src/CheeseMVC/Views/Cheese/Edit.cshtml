@model CheeseMVC.ViewModels.AddEditCheeseViewModel

<h1>Edit Cheese Model.Name (Model.CheeseId)</h1>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" id="@ViewBag.cheeses.Name" type="text" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input class="form-control" name="description" id="@ViewBag.cheeses.Description" type="text" />
    </div>
    
    <input type="hidden" value="@ViewBag.cheeses.CheeseId" name="id" />

    <input type="submit" value="Update Cheese" />

</form>
